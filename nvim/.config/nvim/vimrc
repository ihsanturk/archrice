"=== settings ==="
let mapleader = ","
syntax on
set timeout
set hlsearch
set ttimeout
set incsearch
set smartcase
set tabstop=2
set noswapfile
set ignorecase
set shiftwidth=2
set ttimeoutlen=10
set timeoutlen=1000
scriptencoding utf-8
filetype plugin indent on
let g:netrw_dirhistmax = 0
setglobal fileencoding=utf-8

"=== design ==="
set number
set cursorline
colorscheme delek
hi LineNr ctermfg=238
hi cursorline cterm=NONE ctermbg=237
hi CursorLineNr cterm=bold ctermfg=6
hi StatusLine cterm=bold ctermfg=72 Ctermbg=0 gui=bold,reverse guibg=black

"=== global copy ==="
if has('unnamedplus')
	set clipboard=unnamed,unnamedplus
endif

"=== delete without cut ==="
nnoremap <leader>d "_d

"=== delete spaces end of lines ==="
augroup fmt
	autocmd!
	autocmd BufWritePost,FileWritePost * :silent! %s/\s\+$//
augroup END

"=== shortcut ==="
" TODO
" 	change tab to suggest variable
nmap n nzz
nmap N Nzz
nmap <Tab> <Esc>:tabnext<CR>
nmap <S-Tab> <Esc>:tabprevious<CR>
nmap <F5> <Esc>:so ~/.config/nvim/vimrc<CR>

map q: :q
cnoreabbrev W w
cnoreabbrev Wq wq
cnoreabbrev qw wq
cnoreabbrev Q! q!
cnoreabbrev Q q
nnoremap <esc><esc> :noh<CR>


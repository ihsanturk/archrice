"=== plug ==="
call plug#begin('~/.local/share/nvim/plugged')

" nerd tree ===
Plug 'scrooloose/nerdtree'
Plug 'jistr/vim-nerdtree-tabs'
map <F3> :NERDTreeTabsToggle<CR>
let NERDTreeMapActivateNode='<space>'

" nord vim ===
Plug 'arcticicestudio/nord-vim', { 'branch': 'develop' }
let g:nord_italic = 1

call plug#end()

"=== settings ==="
let mapleader = ","
syntax on
set timeout
set hlsearch
set ttimeout
set incsearch
set smartcase
set tabstop=2
set noswapfile
set ignorecase
set shiftwidth=2
set ttimeoutlen=10
set timeoutlen=1000
scriptencoding utf-8
filetype plugin indent on
let g:netrw_dirhistmax = 0
setglobal fileencoding=utf-8

"=== design ==="
set number
set cursorline
colorscheme nord
hi cursorline cterm=NONE ctermbg=black
hi CursorLineNr cterm=bold ctermfg=6 gui=bold guifg=yellow
hi LineNr ctermfg=238
hi StatusLine cterm=bold ctermfg=72 Ctermbg=0 gui=bold,reverse guibg=black

"=== global copy ==="
if has('unnamedplus')
	set clipboard=unnamed,unnamedplus
endif

"=== delete without cut ==="
nnoremap <leader>d "_d

"=== delete spaces end of lines ==="
augroup fmt
	autocmd!
	autocmd BufWritePost,FileWritePost * :silent! %s/\s\+$//
augroup END

"=== shortcut ==="
" TODO
" 	change tab to suggest variable
nmap <Tab> <Esc>:tabnext<CR>
nmap <S-Tab> <Esc>:tabprevious<CR>
nmap <F5> <Esc>:so ~/.config/nvim/vimrc<CR>

map q: :q
cnoreabbrev W w<CR>
cnoreabbrev Wq wq<CR>
cnoreabbrev qw wq<CR>
cnoreabbrev Q! q!<CR>
cnoreabbrev Q q<CR>
nnoremap <esc><esc> :noh<CR>


set $mod Mod1
set $sup Mod4

set $term --no-startup-id termite
set $browser --no-startup-id chromium
set $gimp --no-startup-id gimp

exec --no-startup-id setxkbmap gb

# For my stupid keyboard
exec --no-startup-id xmodmap -e 'keycode 79 = q'
exec --no-startup-id xmodmap -e 'keycode 80 = w'
exec --no-startup-id xmodmap -e 'keycode 81 = e'
exec --no-startup-id xmodmap -e 'keycode 83 = a'
#TODO find the s keycode 
#exe --no-startup-id xmodmap -e 'keycode 83 = s'
exec --no-startup-id xmodmap -e 'keycode 85 = d'
exec --no-startup-id xmodmap -e 'keycode 88 = x'
exec --no-startup-id xmodmap -e 'keycode 87 = grave'
exec --no-startup-id setxkbmap -option caps:escape
###

# When typing disable mouse
exec --no-startup-id syndaemon -K -i 0.1 -R -d

# exec --no-startup-id xcalib -co 85 -b 5 -a    # Filmic Lut effect on the screen. You can restart with "xcalib -clear"
exec --no-startup-id compton -c -o 0.4 -l -18 -t -15 -G

set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws10 10

font DejaVuSansMono Nerd Font Mono:antialas=true: 9
# focus_follows_mouse no

exec_always --no-startup-id feh --bg-fill $HOME/Pictures/walls/best_always.png
# exec --no-startup-id compton -b --active-opacity 0.85 -i 0.85
exec --no-startup-id xset r rate 240


for_window [title="Growtopia"] move right 438px move up 138px
assign [class="Firefox"] $ws9

set_from_resource $term_background background
set_from_resource $term_foreground foreground
set_from_resource $term_color0     color0
set_from_resource $term_color1     color1
set_from_resource $term_color2     color2
set_from_resource $term_color3     color3
set_from_resource $term_color4     color4
set_from_resource $term_color5     color5
set_from_resource $term_color6     color6
set_from_resource $term_color7     color7
set_from_resource $term_color8     color8
set_from_resource $term_color9     color9
set_from_resource $term_color10    color10
set_from_resource $term_color11    color11
set_from_resource $term_color12    color12
set_from_resource $term_color13    color13
set_from_resource $term_color14    color14
set_from_resource $term_color15    color15

set $FOCUS #a9a9a9
set $UNFOCUS #151515
#  Layout colors         bord    	bg     		text    	indicator(split) 	child border
client.focused          $FOCUS 		$FOCUS 		$FOCUS 		#007744				$FOCUS
client.focused_inactive $UNFOCUS 	$UNFOCUS 	$UNFOCUS 	$UNFOCUS
client.unfocused        $UNFOCUS 	$UNFOCUS 	$UNFOCUS 	$UNFOCUS
client.urgent           $FOCUS 		$FOCUS 		$FOCUS 		$FOCUS
client.background       $UNFOCUS

for_window [class="^.*"] border pixel 0

#  Set inner/outer gaps
set $gapsi 61
set $gapso 0
gaps inner $gapsi
gaps outer $gapso

bindsym $mod+s        gaps inner current plus 5
bindsym $mod+Shift+s  gaps inner current minus 5
bindsym $sup+0 exec --no-startup-id xdotool mousemove 0 1080
bindsym $mod+q kill
bindsym $sup+p exec --no-startup-id $HOME/.config/polybar/launch.sh
bindsym $sup+Shift+p exec --no-startup-id pkill polybar
bindsym $mod+Return exec --no-startup-id $term
bindsym $mod+d exec --no-startup-id dmenu_run
bindsym $mod+w exec --no-startup-id i3-msg 'workspace $ws9'; exec --no-startup-id $browser
bindsym $sup+w exec --no-startup-id exec --no-startup-id surf duckduckgo.com &!
bindsym $sup+s exec --no-startup-id exec --no-startup-id spotify
bindsym $mod+g exec --no-startup-id i3-msg 'workspace $ws8'; exec --no-startup-id $gimp
bindsym $mod+Shift+t  gaps inner current set $gapsi; gaps outer current set $gapso
bindsym $sup+h        exec --no-startup-id $term -e htop
bindsym $sup+g        exec --no-startup-id $term -e gotop
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

bindsym $mod+Tab exec --no-startup-id setxkbmap gb
bindsym $mod+Shift+Tab exec --no-startup-id setxkbmap tr

bindsym XF86MonBrightnessUp 	exec --no-startup-id sudo ~/.scripts/brgh_set.sh i
bindsym XF86MonBrightnessDown 	exec --no-startup-id sudo ~/.scripts/brgh_set.sh d
bindsym XF86AudioMute 			exec --no-startup-id pactl set-sink-mute 0 toggle && killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume 	exec --no-startup-id pactl set-sink-volume 0 +5% && killall -SIGUSR1 i3status
bindsym XF86AudioLowerVolume 	exec --no-startup-id pactl set-sink-volume 0 -5% && killall -SIGUSR1 i3status

bindsym Print --release 		exec --no-startup-id scrot -q 100 '%H%M_%d.%m.%Y_$wx$h.png' -e 'mv $f ~/Pictures/screenshots'
bindsym Shift+Print --release 	exec --no-startup-id scrot -q 100 -s '%H%M_%d.%m.%Y_$wx$h.png' -e 'mv $f ~/Pictures/screenshots'
bindsym $sup+Print --release 	exec --no-startup-id scrot -q 100 -u '%H%M_%d.%m.%Y_$wx$h.png' -e 'mv $f ~/Pictures/screenshots'

bindsym $mod+h 			focus left
bindsym $mod+j 			focus down
bindsym $mod+k 			focus up
bindsym $mod+l 			focus right
bindsym $mod+Shift+h	move left
bindsym $mod+Shift+j 	move down
bindsym $mod+Shift+k 	move up
bindsym $mod+Shift+l 	move right

bindsym $mod+t 				split toggle
bindsym $mod+f 				fullscreen toggle
# bindsym $mod+s 			 layout stacking
bindsym $mod+e 				layout toggle split
bindsym $mod+a 				focus parent
bindsym $mod+c 				focus child
bindsym $mod+space 			focus mode_toggle
# bindsym $mod+Shift+s 		layout tabbed
bindsym $mod+Shift+space 	floating toggle

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec --no-startup-id "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

bindsym $mod+y resize shrink 	width 	5 px or 5 ppt
bindsym $mod+i resize grow 		height 	5 px or 5 ppt
bindsym $mod+u resize shrink 	height 	5 px or 5 ppt
bindsym $mod+o resize grow 		width 	5 px or 5 ppt
bindsym $mod+Shift+y resize shrink 		width 	1 px or 1 ppt
bindsym $mod+Shift+i resize grow 		height 	1 px or 1 ppt
bindsym $mod+Shift+u resize shrink 		height 	1 px or 1 ppt
bindsym $mod+Shift+o resize grow 		width 	1 px or 1 ppt


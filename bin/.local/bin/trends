#!/bin/sh
#
# Eksi and count options added at 2020 Feb 5 22:40
#
# TODO Store history in sqlite with dates.

usage() {
	toolname=$(echo $0 | awk -F'/' '{ printf $NF}')
	>&2 echo "usage: $toolname [ -g|--google <CC> [count] | -e|--eksi [count] ]"
}
colored() {
	colorcode=1;
	while IFS= read -r line; do
		[ $colorcode -lt 3 ] && tput bold;
		tput setaf $colorcode; printf " â€¢ $line\n"; tput sgr0;
		[ $colorcode -ge 3 ] && colorcode=15 || let colorcode++
	done
}

# Args
# unset cc; unset google; unset eksi
case "$1" in
	(-g|--google)
		google=true;
		if [ "$2" = "" ];then usage; exit 2;
		else
			cc=$2;
			if [ "$3" = "" ] || [ $3 -gt 20 ]; then count=10; else count=$3; fi
		fi ;;
	(-e|--eksi) eksi=true; [ "$2" = "" ] && count=10 || count=$2 ;;
	(-h|--help) usage; exit 0 ;;
	(*) usage; exit 2 ;;
esac

# Request & Results
if [ "$google" = "true" ]; then
	file=/tmp/googletrends.txt
	curl -s https://trends.google.com/trends/trendingsearches/daily/rss?geo=$cc|
			grep -o '<title>.*<\/title>' |
		sed 's/^\s*<title>\(.*\)<\/title>/\1/;1d' > $file
	cat $file | head -n $count | colored
elif [ "$eksi" = "true" ]; then
	file=/tmp/eksitrends.txt
	curl -s https://eksisozluk.com | 
		pup -p '.topic-list.partial > li a text{}' | paste -d "|"  - - |
		awk -F'|' '{ sub(/b/,"00",$2); print $2, "|", $1; }' | sort -nr > $file;
		cat $file | head -n $count | colored
fi




#!/bin/sh
vpnFiles="/home/ihsn/Document/vpn"

if ! [ $1 ]; then
	input=$(ls $vpnFiles | dmenu -l 10)
	sudo openvpn --config ${vpnFiles}/*$input* --auth-user-pass ${vpnFiles}/up \
		--setenv PATH '/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin' --down-pre
else
	sudo openvpn --config ${vpnFiles}/*$1* --auth-user-pass ${vpnFiles}/up \
		--setenv PATH '/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin' --down-pre

fi

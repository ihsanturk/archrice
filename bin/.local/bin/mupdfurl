#!/bin/bash

if [ -z $1 ]; then
   read -p "URL: " url
   if [ $url = "" ]; then
      echo Please specify a URL.
      exit 2;
   fi
else
   url=$1
fi

filename="$(echo $url | awk -F/ '{printf $NF}')"
mkdir -p ~/Documents/ && cd ~/Documents
curl -sLO $url & BACK_PID=$!
wait $BACK_PID
mupdf-gl "~/Documents/$filename"

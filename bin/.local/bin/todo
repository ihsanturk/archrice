tmpfile=$HOME/Dropbox/Document/Wiki/todo.wiki
usage_message='[ -ah ] [ -i <index> ]'
usage() { >&2 echo "usage: `basename $0` $usage_message"; }

append=false
while getopts :a args; do
	case $args in
		(a) append=true;;
		(i) index=$OPTARG;;
		(h) usage; exit 0;;
		([?]) usage; exit 2;;
	esac
done


#!/bin/sh

mkdir -p /tmp/iosscreen
rm /tmp/iosscreen/*
filename=0

path="/tmp/iosscreen/${filename}.png"
idevicescreenshot $path
filename=$(echo "${filename}+1" | bc -l)

[ idevicename 2>/dev/null 1>/dev/null ] &&
	while true; do
		feh $path;
		path="/tmp/iosscreen/${filename}.png"
		idevicescreenshot $path
		filename=$(echo "${filename}+1" | bc -l)
	done

#!/bin/sh

Usage() {
	name=$(echo $0 | awk -F/ '{ print $NF }')
	printf "usage: $name <e[RR] | s[SUCC] | f[AIL] | w[ARN] | i[NFO]> <message>";
	tput sgr0; # reset
}

case $1 in
	(ERR | e)
		tput setaf 7; printf "[$(date '+%Y %b %d %X')]"; tput sgr0;
		tput setaf 1; tput bold;
		printf ' [E] '
		;;
	(SUCC | s)
		tput setaf 7; printf "[$(date '+%Y %b %d %X')]"; tput sgr0;
		tput setaf 2; tput bold;
		printf ' [S] '
		;;
	(FAIL | f)
		tput setaf 7; printf "[$(date '+%Y %b %d %X')]"; tput sgr0;
		tput setaf 3;
		printf ' [F] '
		;;
	(WARN | w)
		tput setaf 7; printf "[$(date '+%Y %b %d %X')]"; tput sgr0;
		tput setaf 9;
		printf ' [W] '
		;;
	(INFO | i)
		tput setaf 7; printf "[$(date '+%Y %b %d %X')]"; tput sgr0;
		tput setaf 4;
		printf ' [I] '
		;;
	(-h | --help)
		Usage
		;;
	(*)
		tput setaf 1;
		Usage
		;;
esac
echo $2
tput sgr0

# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
}

#order += "brightness"
order += "volume master"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 1"
order += "tztime local"

#brightness {
#		format = "`$(($(cat /sys/class/backlight/intel_backlight/actual_brightness)/75))`"
#}

volume master {
        format = " ♫ %volume "
        format_muted = " (MUTED) ♫ %volume "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

disk "/" {
        format = " %avail " 
}

wireless _first_ {
        format_up = " wifi:%quality / %essid / %ip "
        format_down = " w: down "
		color_bad = "#777777"
		color_good = "#30DD50"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = " eth: %ip (%speed) "
        format_down = " eth: down "
		color_bad = "#777777"
		color_good = "#30DD50"
}


load {
        format = "%1min"
}

battery 1 {
        format = " %status%percentage "
        status_unk = "⚡"
        status_chr = "⚡"
        status_full = "FULL "
		status_bat = ""
        low_threshold = 30
        threshold_type = percentage
        integer_battery_capacity = true
        color_good = "#0055DD"
}

tztime local {
        format = " %h %d / %I:%M"
}

/home/ihsn/.wine/drive_c/users/ihsn/Local\ \
Settings/Application\ Data/Growtopia/Growtopia.exe"

alias shh='\
sudo umount /dev/sdb2 2>/dev/null;\
sudo hdparm -Y /dev/sdb2 1>/dev/null;\
sudo hdparm -Y /dev/sdb 1>/dev/null' 


#!/bin/sh

#=== color ===#
alias grep="grep --color=auto"
alias diff="diff --color=auto"
alias ls='ls -h --color'

#=== short ===#
alias wifi='\
sudo killall wpa_supplicant dhcpcd;\
sudo rm -rf /var/run/wpa_supplicant;\
sudo wpa_supplicant -B -i  wlp2s0 -c /etc/wpa_supplicant/wpa_supplicant.conf;\
dhcpcd'
alias shh='\
sudo umount /dev/sdb1;\
sudo hdparm -Y /dev/sdb1 1>/dev/null'
alias nk='setxkbmap -option caps:escape; xset r rate 220; setxkbmap gb'
alias usc='cat ${HOME}/doc/useful_commands.sh | fzf'
alias eusc='vim ${HOME}/doc/useful_commands.sh'
alias cpwd='pwd | xclip -selection clipboard'
alias pu='sudo xbps-install -Syuv'
alias pf='sudo xbps-query -s'
alias pr='sudo xbps-remove -R'
alias pl='sudo xbps-query -m'
alias pi='sudo xbps-install'
alias vim='nvim'
alias n='nnn'
